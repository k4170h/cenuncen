{
  "manifest_version": 3,

  "name": "cenuncen",
  "description": "censoring/uncensoring image",
  "version": "1.0",

  "action": {
    "default_icon": "icon16.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"],
      "run_at":"document_end"
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["contextMenus"],
  "host_permissions": ["<all_urls>"]
}
